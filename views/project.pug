extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        //- Use the info in your data file and the comments below to complete this template

        //- Use interpolation to dynamically add the project title
        h1= project_name

        //- Use interpolation to dynamically add the project description
        p= description
        
      .project-tech-links-box.box
        h6 Technologies


          //- Use an `each` iterator and interpolation to dynamically replace the li tags below with the technologies listed for this project
        ul
          if technologies.length
            each technology in technologies
              li= technology

        //- Add the href values to the links below
        a.btn-link(href= live_link) Live Demo
        a.btn-link(href= github_link) GitHub Repo

    .project-img-box.box

      //- Skipping the first image url in the array because it's the same as the thumbnail and proportions make it look otherwise ugly on the page
      if image_urls.length
      each url, index in image_urls.slice(1)
        img.project-img(src=url, alt=project_name)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
